{
  "title": "Dash arrows.",
  "rules": [
    {
      "description": "Dash [left_control + hjkl]",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic",
          "conditions": [
            { "type": "frontmost_application_if", "bundle_identifiers": ["^com\\.kapeli\\.dashdoc$"] }
          ]
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic",
          "conditions": [
            { "type": "frontmost_application_if", "bundle_identifiers": ["^com\\.kapeli\\.dashdoc$"] }
          ]
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic",
          "conditions": [
            { "type": "frontmost_application_if", "bundle_identifiers": ["^com\\.kapeli\\.dashdoc$"] }
          ]
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift",
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic",
          "conditions": [
            { "type": "frontmost_application_if", "bundle_identifiers": ["^com\\.kapeli\\.dashdoc$"] }
          ]
        }
      ]
    }
  ]
}
